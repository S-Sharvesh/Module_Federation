# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# Application Configuration
NODE_ENV=development
PORT=4200

# Micro-frontend URLs
SHELL_APP_URL=http://localhost:4200
FEATURE1_APP_URL=http://localhost:5000

# Production URLs (replace with your actual domains)
# SHELL_APP_URL=https://your-main-domain.com
# FEATURE1_APP_URL=https://feature1.your-domain.com

# API Configuration
# API_BASE_URL=https://api.your-domain.com
# API_KEY=your-api-key-here

# Authentication
# AUTH_SECRET=your-auth-secret
# JWT_SECRET=your-jwt-secret

# Analytics & Monitoring
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# SENTRY_DSN=https://your-sentry-dsn

# Feature Flags
# ENABLE_ANALYTICS=true
# ENABLE_DEBUG_MODE=false

# Database (if applicable)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# External Services
# REDIS_URL=redis://localhost:6379
# ELASTICSEARCH_URL=http://localhost:9200

# Security
# CORS_ORIGIN=https://your-domain.com
# CSRF_SECRET=your-csrf-secret

# Build Configuration
# BUILD_OPTIMIZATION=true
# SOURCE_MAPS=false
